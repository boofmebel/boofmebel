# Example Nginx configuration for multiple sites
# Each site should have its own config file in /etc/nginx/sites-available/
# and symlink in /etc/nginx/sites-enabled/

# Site 1: boofmebel.com
upstream boofmebel_backend {
    server 127.0.0.1:8000;
    keepalive 32;
}

server {
    listen 80;
    server_name boofmebel.com www.boofmebel.com;
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name boofmebel.com www.boofmebel.com;
    
    ssl_certificate /etc/letsencrypt/live/boofmebel.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/boofmebel.com/privkey.pem;
    
    # ... (same SSL and security headers as in setup.sh)
    
    location / {
        proxy_pass http://boofmebel_backend;
        # ... (same proxy settings)
    }
}

# Site 2: anothersite.com (different port)
upstream anothersite_backend {
    server 127.0.0.1:8001;
    keepalive 32;
}

server {
    listen 80;
    server_name anothersite.com;
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name anothersite.com;
    
    ssl_certificate /etc/letsencrypt/live/anothersite.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/anothersite.com/privkey.pem;
    
    location / {
        proxy_pass http://anothersite_backend;
        # ... (same proxy settings)
    }
}

